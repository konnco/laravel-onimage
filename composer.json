{
  "name": "konnco/laravel-onimage",
  "description": "Boost up your coding speed, no worries about managing image anymore.",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "laravel",
    "php",
    "eloquent",
    "library",
    "translate"
  ],
  "authors": [
    {
      "name": "Franky So",
      "email": "frankyso.mail@gmail.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=7.2.0",
    "illuminate/contracts": "5.8.* || ^6.0",
    "illuminate/database": "5.8.* || ^6.0",
    "illuminate/support": "5.8.* || ^6.0",
    "intervention/image": "^2.5",
    "ralouphie/mimey": "^2.1"
  },
  "config": {
    "sort-packages": true
  },
  "require-dev": {
    "orchestra/testbench": "3.8.* || ^4.0",
    "phpunit/phpunit": "^8.0"
  },
  "autoload": {
    "psr-4": {
      "Konnco\\Onimage\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Konnco\\Onimage\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Konnco\\Onimage\\OnimageServiceProvider"
      ]
    }
  },
  "scripts": {
    "csfix": "php-cs-fixer fix --using-cache=no",
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html=build"
  }
}
